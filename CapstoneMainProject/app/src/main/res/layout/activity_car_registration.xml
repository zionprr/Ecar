<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".CarRegistrationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_car_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_car_registration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/textblue" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/ivory"
        android:fontFamily="@font/cafe_24_ssurround_air"
        android:gravity="center"
        android:text="새 차량 등록"
        android:textColor="#1F51B7"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/editText_car_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="left"
            android:hint="차량 모델"
            android:padding="10dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editText_car_model_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="left"
            android:hint="차량 모델 연도"
            android:padding="10dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editText_car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="left"
            android:hint="차량 유형 (예: 소형, 중형, 대형)"
            android:padding="10dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editText_car_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="left"
            android:hint="차량 번호 (예: XX가 XXXX)"
            android:padding="10dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_car_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/selector_button_group"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:text="등록"
            android:textColor="@color/hite"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>