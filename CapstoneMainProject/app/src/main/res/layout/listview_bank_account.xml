<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rectangle_floarlwhite"
    android:elevation="3dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_main_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_rectangle_yellow"
        android:elevation="3dp"
        android:fontFamily="@font/cafe_24_ssurround_air"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:text="주계좌"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/listView_account_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/shape_rectangle_white"
            android:elevation="5dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="center_vertical|center"
            android:text="계좌 정보"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_account_details"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/ic_info_circle_solid" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>