<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--        <Spinner-->
<!--            android:id="@+id/spinner_searchType"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_width="110dp"-->
<!--            android:layout_height="40dp" />-->

        <EditText
            android:id="@+id/editText_search"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="  검색어를 입력하세요  "
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/ImageView_search"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:src="@drawable/search"/>

        <ImageView
            android:id="@+id/ImageView_TTS_speaker"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/tts_speaker"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/ImageView_GPS"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/gps"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/btn_blue">

        <Spinner
            android:id="@+id/spinner_customSearch_chargeSpeed"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"/>

        <Spinner
            android:id="@+id/spinner_customSearch_chargeType"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"/>


    </LinearLayout>


    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:context=".MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Layout_recentSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/outline_schedule_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="최근 검색 목록"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_bookmark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/outline_bookmark_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="즐겨찾기"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_reservationList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/outline_fact_check_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="예약내역"
                android:gravity="center"/>
        </LinearLayout>





    </LinearLayout>



</LinearLayout>

