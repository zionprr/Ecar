<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rectangle_ivory"
    android:elevation="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/listView_marker_charger_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:background="@drawable/shape_rectangle_lightblue"
            android:elevation="3dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="충전기 이름"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listView_marker_charger_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:background="@drawable/shape_rectangle_lightblue"
            android:elevation="3dp"
            android:ellipsize="end"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="충전 방식"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/listView_marker_charger_state_green"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_circle_solid_green"
                android:tooltipText="충전 가능" />

            <ImageView
                android:id="@+id/listView_marker_charger_state_yellow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_circle_solid_green"
                android:tooltipText="충전중"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/listView_marker_charger_state_red"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_circle_solid_green"
                android:tooltipText="충전 불가"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>