<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/purple_500">

    <ImageView
        android:id="@+id/imageView_nav_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_user_circle_solid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_nav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="user name"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/imageView_nav_header"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_nav_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="user email"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView_nav_header"
        app:layout_constraintTop_toBottomOf="@+id/textView_nav_name" />

    <TextView
        android:id="@+id/label_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="◆ 충전 금액  :"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_nav_header" />

    <TextView
        android:id="@+id/textView_nav_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="0 원"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toRightOf="@+id/label_cash"
        app:layout_constraintTop_toBottomOf="@+id/imageView_nav_header" />

    <TextView
        android:id="@+id/label_cash_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="◆ 보유 포인트  :"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_cash" />

    <TextView
        android:id="@+id/textView_nav_cash_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="0 포인트"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toRightOf="@+id/label_cash_point"
        app:layout_constraintTop_toBottomOf="@+id/textView_nav_cash" />

</androidx.constraintlayout.widget.ConstraintLayout>