<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_signUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/textView_signUp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/ivory"
        android:fontFamily="@font/cafe_24_ssurround_air"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="#1F51B7"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/editText_signUp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="left"
            android:hint="이름"
            android:padding="10dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_signUp_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="left"
            android:hint="휴대폰 번호"
            android:padding="10dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_signUp_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="left"
            android:hint="이메일(로그인 아이디)"
            android:padding="10dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_signUp_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="left"
            android:hint="비밀번호 입력"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_signUp_password_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:gravity="left"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_signUp_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/selector_button_group"
            android:fontFamily="@font/cafe_24_ssurround_air"
            android:text="가입 완료"
            android:textColor="@color/hite"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>