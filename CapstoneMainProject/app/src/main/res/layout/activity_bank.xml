<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".BankActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_bank"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/textblue"
            app:layout_scrollFlags="scroll|enterAlways" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView_bank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/cafe_24_ssurround_air"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="연결 계좌 목록"
                android:textColor="#1478cd"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/border_rectangle_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <ListView
                    android:id="@+id/listView_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/white"
                    android:dividerHeight="10dp" />

                <TextView
                    android:id="@+id/textView_account_notFound"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:fontFamily="@font/cafe_24_ssurround_air"
                    android:gravity="center_vertical|center"
                    android:text="연결된 계좌가 없습니다."
                    android:textColor="@color/textGray"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView_new_account"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@drawable/selector_button_group2"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_plus_solid" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>