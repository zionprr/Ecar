<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <TextView
        android:id="@+id/listView_reservation_time_start"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:fontFamily="@font/cafe_24_ssurround_air"
        android:gravity="center"
        android:text="TIME"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_reservation_time_true"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_weight="4"
        android:background="@drawable/selector_button_group4"
        android:fontFamily="@font/cafe_24_ssurround_air"
        android:text="예약 가능"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_reservation_time_false"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_weight="4"
        android:background="@drawable/shape_button_red"
        android:fontFamily="@font/cafe_24_ssurround_air"
        android:text="예약 불가"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>